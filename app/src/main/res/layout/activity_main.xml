<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFAFAF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="28dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:text="@string/number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="28dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="32dp"
        android:text="@string/from"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cm_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="154dp"
        android:layout_height="28dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="16dp"
        android:text="@string/to"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/m_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/number"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="32dp"
        android:autofillHints=""
        android:hint="@string/eg"
        android:inputType="number"
        android:outlineProvider="background"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btn"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="126dp"
        android:backgroundTint="#000000"
        android:text="@string/Convert"
        android:textColor="#09D6BE"
        android:textSize="20sp"
        android:onClick="convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/out"
        android:layout_width="224dp"
        android:layout_height="49dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="93dp"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_2" />

    <Switch
        android:id="@+id/cm_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="1dp"
        android:minHeight="48dp"
        android:showText="false"
        android:text="@string/cm"
        android:textColor="#040404"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/m_1"
        app:layout_constraintTop_toBottomOf="@+id/number"
        tools:ignore="DuplicateSpeakableTextCheck,UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/m_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="65dp"
        android:minHeight="48dp"
        android:text="@string/m"
        android:textColor="#040404"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number"
        tools:ignore="DuplicateSpeakableTextCheck,UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/m_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:minHeight="48dp"
        android:text="@string/m"
        android:textColor="#040404"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cm_2"
        app:layout_constraintTop_toBottomOf="@+id/cm_1"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/cm_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="73dp"
        android:minHeight="48dp"
        android:text="@string/cm"
        android:textColor="#040404"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cm_1"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>